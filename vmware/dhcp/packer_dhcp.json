{
    "variables": {
        "username": "{{ '{{env  `VSPHERE_USER`}}' }}",
        "password": "{{ '{{env  `VSPHERE_PASSWORD`}}' }}",
        "ssh_password": "{{ '{{env  `VM_TEMPLATE_PASSWORD`}}' }}"
      },
      "builders": [
      {
          "type": "vsphere-clone",
          "vcenter_server": "{{ vsphere_vcenter }}",
          "username": "{{ '{{user  `username`}}' }}",
          "password": "{{ '{{user  `password`}}' }}",
          "insecure_connection": true,

          "vm_name": "dhcp-{{ nested_env }}",
          "datastore": "{{ vsphere_datastore }}",
          "cluster": "{{ vsphere_cluster }}",
          "folder": "{{ vsphere_folder }}",
          "resource_pool": "{{ vsphere_resource_pool }}",
          "template": "{{ vm_template }}",
          
          "disk_size": "2097152",
          "network": "{{ vsphere_network }}",
          "CPUs": 2,
          "RAM": 2048,
          "customize": {
            "linux_options": {
              "host_name": "dhcp-{{ nested_env }}",
              "domain": "adlere.priv"
            },
            "network_interface": {
              "ipv4_address": "{{ dhcp_ip }}",
              "ipv4_netmask": "{{ netmask_short }}"
            },
            "ipv4_gateway": "{{ gateway }}",
            "dns_server_list": ["{{ dns1 }}", "{{ dns2 }}"]
          },

          "communicator" : "ssh", 
          "ssh_username": "root",
          "ssh_password": "{{ '{{user `ssh_password`}}' }}",
          "ssh_timeout" : "5m",
      }
    ]
}